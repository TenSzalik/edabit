//Given an array of integers, return the difference between the largest and smallest integers in the array.
using NUnit.Framework;
using System;

[TestFixture]
public class Tests
{
	[Test]
	[TestCase(new int[] {-9, -8, 6, -9, 15, 6}, Result=24)]
