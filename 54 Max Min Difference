	[TestCase(new int[] {5, 1, -9, 7, -8, -10}, Result=17)]
	[TestCase(new int[] {5, 1, -9, 7, -8, -10}, Result=17)]
	[TestCase(new int[] {4, 17, 12, 2, 10, 2}, Result=15)]
	public static int Diff(int[] arr)
	{
		Console.WriteLine("Input: {0}", arr);
		return Program.Diff(arr);
	}	
}
