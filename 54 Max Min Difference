	[TestCase(new int[] {-2, 20, -9, -9, -2, -7}, Result=29)]
	[TestCase(new int[] {4, -2, 11, -9, 15, 2}, Result=24)]
	[TestCase(new int[] {15, 10, 3, -6, 6, 19}, Result=25)]
